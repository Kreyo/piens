{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
